<div class="preloader">
  <div class="loader">
    <div class="circle"></div>
    <div class="circle"></div>
    <div class="circle"></div>
  </div>
  <p class="loading-text">AURORAAA</p>
</div>

<style>
  .preloader {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: #000;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    z-index: 9999;
    transition: opacity 0.5s ease-out;
  }

  .loader {
    display: flex;
    gap: 1rem;
  }

  .circle {
    width: 20px;
    height: 20px;
    background-color: #fff;
    border-radius: 50%;
    animation: bounce 0.5s ease-in-out infinite;
  }

  .circle:nth-child(2) {
    animation-delay: 0.1s;
  }

  .circle:nth-child(3) {
    animation-delay: 0.2s;
  }

  .loading-text {
    color: #fff;
    font-family: 'Ancizar Serif', serif;
    font-size: 2.5rem;
    margin-top: 1.5rem;
    letter-spacing: 4px;
    animation: bounce 0.5s ease-in-out infinite;
    animation-delay: 0.3s;
  }

  @keyframes bounce {
    0%, 100% {
      transform: translateY(0);
    }
    50% {
      transform: translateY(-20px);
    }
  }

  @media (max-width: 768px) {
    .circle {
      width: 15px;
      height: 15px;
    }

    .loading-text {
      font-size: 2rem;
      letter-spacing: 3px;
    }
  }
</style>

<script>
  window.addEventListener('load', () => {
    const preloader = document.querySelector('.preloader') as HTMLElement;
    if (preloader) {
      preloader.style.opacity = '0';
      setTimeout(() => {
        preloader.style.display = 'none';
      }, 500);
    }
  });
</script> 