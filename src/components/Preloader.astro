---
// Preloader component for loading states
---

<div id="preloader" class="preloader">
  <div class="loader">
    <h1>Aurora</h1>
    <p>Explora mi mundo creativo</p>
    <div class="spinner"></div>
  </div>
</div>

<style>
  .preloader {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: linear-gradient(rgba(0, 0, 0, 0.7), rgba(0, 0, 0, 0.7)), url('/img/backgroundn.jpg');
    background-size: cover;
    background-position: center;
    display: flex;
    justify-content: center;
    align-items: center;
    z-index: 9999;
    transition: opacity 0.5s ease-out;
  }

  .loader {
    text-align: center;
    color: white;
  }

  .loader h1 {
    font-family: var(--font-display);
    font-size: 4rem;
    margin-bottom: 1rem;
  }

  .loader p {
    font-family: 'Ancizar Serif', serif;
    font-size: 1.5rem;
    margin-bottom: 2rem;
  }

  .spinner {
    width: 50px;
    height: 50px;
    border: 5px solid rgba(255, 255, 255, 0.3);
    border-radius: 50%;
    border-top-color: #fff;
    animation: spin 1s ease-in-out infinite;
    margin: 0 auto;
  }

  @keyframes spin {
    to {
      transform: rotate(360deg);
    }
  }

  @media (max-width: 768px) {
    .loader h1 {
      font-size: 3rem;
    }

    .loader p {
      font-size: 1.2rem;
    }
  }
</style>

<script>
  // Show preloader on page load and refresh
  document.addEventListener('DOMContentLoaded', () => {
    const preloader = document.getElementById('preloader');
    if (preloader) {
      preloader.style.opacity = '1';
      preloader.style.display = 'flex';
    }
  });

  // Hide preloader after a minimum time and when content is loaded
  window.addEventListener('load', () => {
    const preloader = document.getElementById('preloader');
    if (preloader) {
      // Ensure preloader shows for at least 1.5 seconds
      setTimeout(() => {
        preloader.style.opacity = '0';
        setTimeout(() => {
          preloader.style.display = 'none';
        }, 500);
      }, 1500);
    }
  });
</script> 