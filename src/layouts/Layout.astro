---
import '../styles/global.css';
import Favicon from '../components/Favicon.astro';
import Preloader from '../components/Preloader.astro';

interface Props {
	title: string;
}

const { title } = Astro.props;
const isMainPage = Astro.url.pathname === '/';
const isSpecialPage = ['/philosophy', '/favorite-songs', '/inspo'].includes(Astro.url.pathname);

const socialLinks = {
	instagram: "https://www.instagram.com/a_u__r___/",
	twitter: "https://x.com/i/flow/login?redirect_after_login=%2Fkxurzaxis",
	pinterest: "https://mx.pinterest.com/u_r__z___/",
	github: "https://github.com/auriza-10",
	spotify: "https://open.spotify.com/user/54175jgu50vx2mxcs75iquetj?si=ymtVLQeGQ2O_fY1SumRaEQ",
	behance: "https://www.behance.net/sofiamurizap"
};
---

<!DOCTYPE html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">
		<title>{title} | Aurora</title>
		<meta name="description" content="Aurora - Explora mi mundo creativo a través de fotos, ilustraciones y animaciones" />
		<link rel="manifest" href="/site.webmanifest">
		<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.2/css/all.min.css" integrity="sha512-Evv84Mr4kqVGRNSgIGL/F/aIDqQb7xQ2vcrdIwxfjThSH8CSR7PBEakCr51Ck+w+/U6swU2Im1vVX0SVk9ABhg==" crossorigin="anonymous" referrerpolicy="no-referrer" />
		<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.css" />
		<Favicon />
		<Preloader />
	</head>
	<body class={isMainPage ? 'main-page' : 'content-page'}>
		{!isMainPage && (
			<header>
				<nav aria-label="Navegación principal">
					<a href="/" class="home-link" aria-label="Ir a la página principal">
						<img src="/img/icono.png" alt="Logo de Aurora" class="nav-icon">
					</a>
					<ul>
						{isSpecialPage ? (
							<>
								<li><a href="/philosophy" aria-current={Astro.url.pathname === '/philosophy' ? 'page' : undefined}>Philosophy</a></li>
								<li><a href="/favorite-songs" aria-current={Astro.url.pathname === '/favorite-songs' ? 'page' : undefined}>Favorite Songs</a></li>
								<li><a href="/inspo" aria-current={Astro.url.pathname === '/inspo' ? 'page' : undefined}>Inspiration</a></li>
							</>
						) : (
							<>
								<li><a href="/photos" aria-current={Astro.url.pathname === '/photos' ? 'page' : undefined}>Fotos</a></li>
								<li><a href="/illustrations" aria-current={Astro.url.pathname === '/illustrations' ? 'page' : undefined}>Ilustraciones</a></li>
								<li><a href="/work" aria-current={Astro.url.pathname === '/work' ? 'page' : undefined}>Animaciones</a></li>
							</>
						)}
					</ul>
				</nav>
			</header>
		)}

		<slot />

		<footer class="social-media">
			<h2>Follow me on social media</h2>
			<div class="social-icons">
				<a href={socialLinks.instagram} target="_blank" rel="noopener noreferrer" class="social-icon" aria-label="Instagram">
					<i class="fab fa-instagram"></i>
				</a>

				<a href={socialLinks.twitter} target="_blank" rel="noopener noreferrer" class="social-icon" aria-label="Twitter">
					<i class="fab fa-x-twitter"></i>
				</a>

				<a href={socialLinks.pinterest} target="_blank" rel="noopener noreferrer" class="social-icon" aria-label="Pinterest">
					<i class="fab fa-pinterest"></i>
				</a>

				<a href={socialLinks.github} target="_blank" rel="noopener noreferrer" class="social-icon" aria-label="GitHub">
					<i class="fab fa-github"></i>
				</a>

				<a href={socialLinks.spotify} target="_blank" rel="noopener noreferrer" class="social-icon" aria-label="Spotify">
					<i class="fab fa-spotify"></i>
				</a>

				<a href={socialLinks.behance} target="_blank" rel="noopener noreferrer" class="social-icon" aria-label="Behance">
					<i class="fab fa-behance"></i>
				</a>
			</div>
			<p class="copyright">© {new Date().getFullYear()} Auroraaa. All rights reserved.</p>
		</footer>
	</body>
</html>

<style>
	body {
		margin: 0;
		padding: 0;
		min-height: 100vh;
		display: flex;
		flex-direction: column;
	}

	body.main-page {
		background-image: url('/img/backgroundb.jpg');
		background-size: cover;
		background-position: center;
		background-attachment: fixed;
	}

	body.content-page {
		background-image: url('/img/backgroundb.jpg');
		background-size: cover;
		background-position: center;
		background-attachment: fixed;
	}

	@media (prefers-color-scheme: dark) {
		body.main-page,
		body.content-page {
			background-image: url('/img/backgroundnn.jpg');
		}
	}

	header {
		background: rgba(255, 255, 255, 0.1);
		backdrop-filter: blur(10px);
		padding: 1rem;
		position: sticky;
		top: 0;
		z-index: 100;
	}

	nav {
		display: flex;
		align-items: center;
		justify-content: space-between;
		max-width: 1200px;
		margin: 0 auto;
		padding: 0 1rem;
	}

	.home-link {
		display: flex;
		align-items: center;
		text-decoration: none;
	}

	.nav-icon {
		height: 25px;
		width: auto;
		transition: transform 0.3s ease;
	}

	.home-link:hover .nav-icon {
		transform: scale(1.1);
	}

	nav ul {
		list-style: none;
		padding: 0;
		margin: 0;
		display: flex;
		justify-content: center;
		gap: 2rem;
	}

	nav a {
		color: var(--text-color);
		text-decoration: none;
		font-size: 1.1rem;
		transition: color 0.3s ease;
	}

	nav a:hover {
		color: #666;
	}

	nav a[aria-current="page"] {
		font-weight: bold;
		text-decoration: underline;
	}

	.social-media {
		background: #ffffff;
		padding: 2rem 1rem;
		text-align: center;
		margin-top: auto;
	}

	.social-media h2 {
		margin-bottom: 1.5rem;
		color: #333;
	}

	.social-icons {
		display: flex;
		justify-content: center;
		gap: 1.5rem;
		flex-wrap: wrap;
		margin-bottom: 1.5rem;
	}

	.social-icon {
		color: #333;
		transition: transform 0.3s ease, color 0.3s ease;
		font-size: 1.5rem;
	}

	.social-icon:hover {
		transform: scale(1.1);
		color: #666;
	}

	.copyright {
		color: #666;
		font-size: 0.9rem;
		margin: 0;
	}

	@media (max-width: 768px) {
		nav {
			flex-direction: column;
			gap: 1rem;
		}

		nav ul {
			flex-direction: column;
			align-items: center;
			gap: 1rem;
		}

		.nav-icon {
			height: 20px;
		}

		.social-icons {
			gap: 1rem;
		}
	}

	@media (prefers-color-scheme: dark) {
		body.main-page,
		body.content-page {
			background-image: url('/img/backgroundnn.jpg');
		}

		.social-media {
			background: rgba(255, 255, 255, 0.1);
			backdrop-filter: blur(10px);
		}

		.social-media h2 {
			color: var(--text-color);
		}

		.social-icon {
			color: var(--text-color);
		}

		.copyright {
			color: var(--text-color);
		}
	}
</style>
