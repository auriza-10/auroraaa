---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Illustrations | Aurora">
  <h1>Illustrations</h1>
  <div class="gallery">
    <!-- Add your illustrations here -->
    <p>Your illustrations gallery will be displayed here.</p>
  </div>
</Layout>

<style>
  h1 {
    margin-bottom: 2rem;
    font-size: 2.5rem;
    color: #333;
  }

  .gallery {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
    gap: 2rem;
    padding: 1rem 0;
  }
</style> 