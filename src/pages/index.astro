    <div class="swiper mySwiper">
      <div class="swiper-wrapper">
        <div class="swiper-slide">
          <img src="/auroraaa/img/aurora1.jpg" alt="Aurora 1" />
        </div>
        <div class="swiper-slide">
          <img src="/auroraaa/img/aurora2.jpg" alt="Aurora 2" />
        </div>
        <div class="swiper-slide">
          <img src="/auroraaa/img/aurora3.jpg" alt="Aurora 3" />
        </div>
        <div class="swiper-slide">
          <img src="/auroraaa/img/aurora4.jpg" alt="Aurora 4" />
        </div>
        
        <div class="swiper-slide">
          <img src="/auroraaa/img/aurora5.jpg" alt="Aurora 2" />
        </div>
        <div class="swiper-slide">
          <img src="/auroraaa/img/aurora6.jpg" alt="Aurora 3" />
        </div>
        <div class="swiper-slide">
          <img src="/auroraaa/img/aurora7.jpg" alt="Aurora 4" />
        </div>
        <div class="swiper-slide">
          <img src="/auroraaa/img/aurora8.jpg" alt="Aurora 4" />
        </div>
